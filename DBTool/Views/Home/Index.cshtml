@{
    ViewData["Title"] = "Home Page";
}
@using DBTool.Models;
@using System.Collections.Generic;
@using System.Diagnostics;

<div class="container">
    <h1 class="display-4">Welcome</h1>
    <div class="row" style="margin-bottom:20px">
        <form id="askform" action="@Url.Action("Index")" method="get" style="">
               Schema:<input   type="text" name="TabSchema" id="schema" value="DB2ADMIN" readonly="readonly"/>
               TableName:<input type="text" name="TabName" id="tableName" value="@ViewBag.TabName" />
               <input type="submit" action="submit" value="查询" />
        </form>
    </div>
    <div class="row">
        <table border="1" style="float:left" class="table">
            <tr>
                <th>空间</th>
                <th>表</th>
                <th>操作</th>
            </tr>
            @{
                foreach (SyscatTable i in @ViewBag.TempList)
                {
                    <tr>
                        <td>@i.TabSchema</td>
                        <td>@i.TabName</td>
                        <td>@Html.ActionLink("查看", "ItemView", i)</td>
                    </tr>
                }
            }
        </table>
    </div>
</div>


